{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
      "simple": {
        "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
      }
    },
    "handlers": {
      "file_handler": {
        "class": "logging.FileHandler",
        "level": "DEBUG",
        "formatter": "simple",
        "filename": "python_logging.log",
        "encoding": "utf8"
      },
      "stream_handler": {
        "class": "logging.StreamHandler",
        "level": "DEBUG",
        "formatter": "simple"
      }
    },
    "root": {
      "level": "DEBUG",
      "handlers": [
        "stream_handler",
        "file_handler"
      ]
    }
  }
  